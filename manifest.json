{
  "name": "Lingopolo Audio Concatenator",
  "description": "Concatenate Lingopolo sentence + breakdown audio with silence.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["activeTab"],

  "host_permissions": [
    "https://lingopolo.org/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://lingopolo.org/*"],
      "js": ["lame.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
